<!DOCTYPE html>
  <html>
    <head>
      <!--Import Google Icon Font-->
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
          
  <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
    </head>

    <body>
      <h4 align="center">Url Shortened</h4>
      <br>
      
      <div class="row">
        <form class="col s12" method="post" action="/">
          <div class="row">
            <div class="col s4"></div>
            <div class="input-field col s4">
              <input placeholder="Input Url" name="url" type="text" class="validate">
              <button type="submit" name="submit" class="waves-effect waves-light btn">Add Url</button>
            </div>
            <div class="col s4"></div>
          </div>
        </form>
      </div>
      
      <table class="bordered highlight">
        <thead>
          <tr>
              <th>No</th>
              <th>Id</th>
              <th>Url Name</th>
              <th>Url Shortened</th>
              <th>Clicked Count</th>
              <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% no =1 %>
          <% data_url.forEach((data) =>{ %>
          <tr>
            <td><%= no %></td>
            <td><%= data.id %></td>
            <td><%= data.url %></td>
            <td><a href="/<%= data.id %>" target="_blank"><%= data.shortened %></a></td>
            <td><%= data.clicked %></td>
            <td><a href="/delete/<%= data.id %>" onclick="confirm('Are you Sure want to delete?')">DELETE</a></td>
          </tr>
          <% no++ %>
          <% }) %>
        </tbody>
      </table>
    
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script type="text/javascript" src="js/materialize.min.js"></script>
    </body>
  </html>